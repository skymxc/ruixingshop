/* miniprogram/pages/goodsEvaluate/goodsEvaluate.wxss */
.container-evaluate{
  width: 100%;
  min-height: 40px;
  background-color: white;
  margin-bottom: 10px;
  padding: 5px;
  display: flex;
  flex-direction: row;
}
.image-ava{
  width: 50px;
  height: 50px;
  margin: 5px;
  border-radius: 25px;
}
.content-goods,.content-evaluate{
height: 50px;
width: 100%;
color: darkgray;
display: flex;
flex-direction: row;
align-items: center;
}

.container-evaluate-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  
}
.content-evaluate{
  color: black;
  margin: 5px;
}
.container-evaluate-image{
  width: 100%;
  height: 100px;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  padding: 5px;
  margin-bottom: 5px;
}
.image-evaluate{
  width: 30%;
  height: 100%;
  margin: 5px;
}
.contianer-more-image{
  background-color: rgba(0, 0, 0, 0.555);
  color: white;
  font-size: 30px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 5px;
  height: 90px;
  top: 5px;
  bottom: 5px;
  font-weight: bold;

}
