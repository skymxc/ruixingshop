/* miniprogram/pages/goodsDetail/goodsDetail.wxss */
.container{
  height: 100%;
}
scroll-view{
  flex: 1;
  width: 100%;
}
.container-tools{
  height: 50px;
  background-color: white;
  width: 100%;
  display: flex;
  flex-direction: row;
  border-top: solid gainsboro 1px;
  position: fixed;
  bottom: 0px;
}
.container-choose-rule{
  position: fixed;
  bottom: 0px;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.container-goods{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.swiper-pictures{
  width: 100%;
  height: 300px;
}
.image-goods-picture{
  height: 100%;
  width: 100%;
}
.container-goods-name{
  display: flex;
  width: 100%;
  min-height: 50px;
  flex-direction: row;
  align-items: center;
  background-color: white;
  justify-content: center;
  margin-top: 5px;
}
.view-goods-name{
  flex: 1;
  padding-left: 5px;
  padding-right: 5px;
}
.button-share{
  width: 30px;
  margin-right: 10px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: white;
  font-size: 12px;
}
.button-share::after{
border: none;
}
.image-share{
  height: 25px;
  width: 25px;
}

.container-goods-pastage{
  padding: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
  color: rgb(189, 185, 185);
  font-size: 13px;
}
.container-goods-posage-item{
  flex: 1;
}
.container-price{
  color: rgba(255, 0, 64, 0.774);
  font-size: 20px;
  background-color: white;
  width: 100%;
  padding-left: 10px;
}
.container-rule{
  width: 100%;
  height: 50px;
 background-color: white;
 display: flex;
 flex-direction: row;
 align-items: center;
 position: relative;
 margin-top: 10px;
 margin-bottom: 10px;
}
.image-more{
  height: 20px;
  width: 20px;
  position: absolute;
  right: 10px;
}
.container-detial-title{
  display: flex;
  flex-direction: row;
  height: 50px;
  width: 100%;
  justify-content: center;
  align-items: center;
  background-color: white;
}
.selected{
  color: red;
  border-bottom: solid red 1px;
}
.container-detial-item{
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.container-detail-picture{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-bottom: 50px;
}
.image-detail-picture{
  width: 100%;
  height: 500px;
}
