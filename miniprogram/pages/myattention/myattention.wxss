/* miniprogram/pages/myattention/myattention.wxss */
.container{
  height: 100%
}

.contianer-title{
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: relative;
  background-color: white;
  border-bottom: solid gainsboro 1px;
}
.text-edit{
  position: absolute;
  right: 10px;
  color: #333;
}
.scroll{
  flex: 1;
  width: 100%;
  overflow: hidden;
}
.contianer-operation{
  width: 100%;
  height: 50px;
  position: relative;
  display: flex;
  flex-direction: row;
  background-color: white;
   border-bottom: solid gainsboro 1px;
   justify-content: flex-start;
   align-items: center
}
.container-del{
  display: flex;
  width: 80px;
  height: 100%;
  background-color: red;
  color: white;
  position: absolute;
  right: 0px;
  bottom: 0px;
  top: 0px;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}
.checkbox-goods{
  width: 20px;
  height: 20px;
  margin: 5px;
}

.container-collect{
  width: 100%;
  padding: 15px 10px 15px 10px;
  background-color: white;
  border-bottom: solid gainsboro 1px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.container-goods{
  flex: 1;
  height: 80px;
  display: flex;
  flex-direction: column;
  margin-left: 10px;

}
.text-goods-name-s{
  flex: 1;
  overflow: hidden;
  padding: 0px;
  background-color: white;
}
.image-goods-cover{
  height: 80px;
  width: 75px;
  padding: 0px;
}
.text-goods-price-s{
  color: red;
  
}