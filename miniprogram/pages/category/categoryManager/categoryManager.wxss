/* miniprogram/pages/category/categoryManager/categoryManager.wxss */

.container {
  width: 100%;
  height: 100%;
  position: relative;
}

.container-list {
  width: 100%;
  margin-bottom: 60px;
}

.button-add {
  width: 80%;
  position: fixed;
  bottom: 5px;
  left: 10%;
}

.container-confirm {
  width: 70%;
  min-height: 150px;
  background-color: white;
  border-radius: 10px;
  position: absolute;
  top: 200px;
  left: 15%;
  padding: 10px;
  align-items: center;
}

.container-category {
  min-height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 5px;
  padding: 5px;
  border-bottom: solid #999 1px;
}

.text-category {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 10px;
}

.image-category {
  width: 40px;
  height: 40px;
  margin-right: 5px;
}

.form-update, .container-update {
  /* width: 100%;
  height: 100%; */
}

.container-update {
  display: flex;
  flex-direction: column;
}

.container-input {
  margin: 5px;
  display: flex;
  flex-direction: row;
  min-height: 30px;
  align-items: center;
}

.input-category {
  flex: 1;
  height: 100%;
  border: solid gainsboro 1px;
  padding: 2px;
}

.container-update-button{
  display: flex;
  flex-direction: row;
  width: 100%;
}
.button-update{
  flex: 1;
  margin: 5px;
}
