.container-address-empty{
  height: 60px;
  width: 100%;
  background-color: white;
  border-bottom: dashed rebeccapurple 5px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.image-add-address{
  width: 20px;
  height: 20px;
  margin-right: 5px;
}
.container-goods-list{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.container-goods{
  width: 100%;
  max-height: 150px;
  padding: 10px;
  background-color: white;
  border-top: solid gainsboro 1px;
  display: flex;
  flex-direction: row;
  margin-top: 15px;

}
.image-goods{
  width: 100px;
  height: 110px;
  margin-right: 10px;
}
.container-goods-content{
  flex: 1;
  max-height: 130px;
  display: flex;
  flex-direction: column;
}
.container-goods-name-price{
  max-height: 100px;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.container-goods-name{
  flex: 1;
  max-height: 100px;
}
.container-goods-price-s{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.text-goods-num,.contianer-goods-rule{
  color: #c0bdbd;
}
.contianer-goods-list-total{
  width: 100%;
  padding: 10px;
  background-color: white;
  text-align: right;
}
.text-goods-list-total-rpice{
  color: red;
}
.contianer-comment{
  margin-top: 15px;
  width: 100%;
  height: 100px;
  padding: 10px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  /* align-items:center; */
  background-color:white;

}
.textarea-comment{
  flex: 1;
  height: 100%;
  padding: 5px;
  margin-left: 10px;
}
.container-total{
  margin-top: 15px;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 10px;
  background-color: white;
}
.container-total-item{
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items:center;

}
.contianer-total-goods{
  border-bottom: solid gainsboro 1px;
}
.contianer-operate{
  width: 100%;
  height: 60px;
  position: fixed;
  bottom: 0px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  background-color: white;
  font-size:20px;

}
.pay{
 height:100%;
min-width:100px;
background-color:red;
color:white;
margin-left:10px;
display:flex;
flex-direction:row;
justify-content:center;
align-items:center;

}
.container-write-address{
  width: 90%;
  min-height: 300px;
  background-color: white;
  
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 110px;
  left: 5%;
  z-index: 99;
}
/* 地址 */
.container-address{
 width: 100%;
 min-height: 80px;
 background-color: white;
 border-bottom: dashed rebeccapurple 5px;
 padding: 10px;
 display: flex;
 flex-direction: column;
}

.text-address-consignee{
  color: black;
  
}
.text-address-region{
  display: inline-block;
  margin-top: 5px;
  color: #cdcdcd;
  font-size: 15px;
}

.container-coupon{
  width: 100%;
  background-color: white;
  padding: 10px;
  display: flex;
  flex-direction: column;
  margin-top: 15px;
}
.container-coupon-label{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}


