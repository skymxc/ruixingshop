/* miniprogram/pages/orderDetail/orderDetail.wxss */

.container-state {
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: white;
  color: rebeccapurple;
}

/* 地址 */
.container-address {
  width: 100%;
  min-height: 80px;
  background-color: white;
  padding: 10px;
  display: flex;
  flex-direction: column;
}

.text-address-consignee {
  color: black;
}

.text-address-region {
  display: inline-block;
  margin-top: 5px;
  color: #cdcdcd;
  font-size: 15px;
}

.container-goods-list {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.container-goods {
  width: 100%;
  max-height: 150px;
  padding: 10px;
  background-color: white;
  border-top: solid gainsboro 1px;
  display: flex;
  flex-direction: row;
  margin-top: 15px;
}

.image-goods {
  width: 100px;
  height: 110px;
  margin-right: 10px;
}

.container-goods-content {
  flex: 1;
  max-height: 130px;
  display: flex;
  flex-direction: column;
}

.container-goods-name-price {
  max-height: 100px;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.container-goods-name {
  flex: 1;
  max-height: 100px;
}

.container-goods-price-s {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.text-goods-num, .contianer-goods-rule {
  color: #c0bdbd;
}

.contianer-goods-list-total {
  width: 100%;
  padding: 10px;
  background-color: white;
  text-align: right;
}

.text-goods-list-total-rpice {
  color: red;
}

.container-total {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 10px;
  background-color: white;
}

.container-total-item {
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.container-order-info {
  margin-top: 15px;
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  padding: 10px;
}

.text-order-info {
  width: 100%;
  margin-bottom: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-left: solid rosybrown 2px;
  padding-left: 5px;
}
.container-order-info-item{
  width: 100%;
  min-height: 40px;
  margin-left: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.text-order-info-item-label{
  width: 100px;
}

.container-operate{
  margin-top: 15px;
  width: 100%;
  height: 60px;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding: 10px;
  align-items: center;
}
.text-confirm-delivery{
  padding: 10px;
  border: solid rosybrown 1px;
  border-radius: 5px;
}
