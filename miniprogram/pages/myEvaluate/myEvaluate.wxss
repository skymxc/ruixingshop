/* miniprogram/pages/myEvaluate/myEvaluate.wxss */
.container-item{
  width: 100%;
  background-color: white;
  margin-bottom: 10px;
  padding: 5px;
  display: flex;
  flex-direction: column;
}
.content-evaluate{
  width: 100%;
  margin: 5px;
}
.container-evaluate-image{
  width: 100%;
  height: 100px;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  padding: 5px;
  margin-bottom: 5px;
}
.image-evaluate{
  width: 30%;
  height: 100%;
  margin: 5px;
}
.contianer-more-image{
  background-color: rgba(0, 0, 0, 0.555);
  color: white;
  font-size: 30px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 5px;
  height: 90px;
  top: 5px;
  bottom: 5px;
  font-weight: bold;

}
.container-evaluate-goods{
  width: 100%;
  height: 100px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fafafa;
}
.image-goods{
  height: 100%;
  width: 100px;
  margin-right: 10px;
}
.contianer-goods-name{
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;

}
.content-goods-name{
  flex: 1;
  width: 100%;
  color: black;
  margin: 2px;
}
.content-goods-total{
  color: red;

}
.container-del{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;

}
.text-del{
  padding: 5px;
  display: inline-block;
  background-color: rebeccapurple;
  border-radius: 5px;
  color: white;
  margin: 5px;
}