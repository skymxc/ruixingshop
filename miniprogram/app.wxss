/**app.wxss**/
page{
  width: 100%;
  height: 100%;
  background-color: ghostwhite;
}
.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  font-size: 15px;
  
}

.box {
  box-sizing: border-box;
}

.container-interval-vertical {
  /* margin-top: 5px; */
  margin-bottom: 5px;
}

/**白色矩形框**/

.container-landscape-white {
  width: 100%;
  min-height: 40px;
  background-color: white;
}

.contianer-box-center{
  padding: 5px;
  display: flex;
  align-items: center;
}
.container-underline{
  border-bottom: solid 1px rgba(128, 128, 128, 0.212);
}

.mask {
  width: 100%;
  height: 100%;
  background-color: rgba(7, 0, 0, 0.404);
  position: fixed;
  top: 0px;
}

/* 商品 */
/* image 200 +text 30 +price 30 +padding 10= 270*/
.container-goods-item{
  width: 49%;
  height: 270px;
  padding: 5px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin: 0.5%;
  background-color: #f8f8f8;
}
/* 这里与 添加时保持一致的尺寸 */
.image-goods-cover{
  height: 180px;
  width: 150px;
  padding: 2px;
  align-self: center;
}
.text-goods-name{
  height: 30px;
  width: 100%;
  padding:5%; 
  overflow: hidden;
  font-size: 12px;
  background-color: #f5f5f5;
}
.container-goods-price{
  width: 90%;
  padding: 5%;
   background-color: #f5f5f5;
   height: 30px;
   display: flex;
   flex-direction: row;
   align-items: center;
   overflow: hidden;
}
.text-goods-price{
  color: red;
  flex: 1;
  font-size: 15px;
}
.text-goods-buy{
  background-color: rgba(255, 115, 0, 0.589);
  width: 50px;
  height: 20px;
  line-height: 20px;
  display: inline-block;
  text-align: center;
  color: white;
  font-size: 15px;

}